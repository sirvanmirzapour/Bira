<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarGetNumber"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"
                android:layout_margin="4dp"
                android:id="@+id/txtToolBarGetNumber"
                android:textColor="#fafafa"
                android:gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اضافه کردن دستگاه جدید"/>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtNameOfDevice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_baseline_menu_24"
                android:ems="10"
                android:gravity="start"
                android:hint="نام کارکرد"
                android:inputType="text"
                android:textColor="#000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtNumberOfDevice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_baseline_local_phone_24"
                android:ems="10"
                android:gravity="end"
                android:hint="شماره موبایل"
                android:inputType="phone"
                android:textColor="#000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtPassOfDevice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_baseline_lock_24"
                android:ems="10"
                android:gravity="end"
                android:hint="رمز دستگاه"
                android:inputType="numberPassword"
                android:textColor="#000"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/edtNameOfFunctionOne"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_baseline_drag_indicator_24"
                android:ems="10"
                android:gravity="start"
                android:hint=" عنوان کلید یک"
                android:textColor="#000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtCodeOfFunctionOne"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_baseline_drag_indicator_24"
                android:ems="10"
                android:gravity="start"
                android:hint=" کد کلید یک"
                android:inputType="number"
                android:textColor="#000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtNameOfFunctionTwo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_baseline_drag_indicator_24"
                android:ems="10"
                android:gravity="start"
                android:hint=" کد کلید دوم"
                android:textColor="#000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtCodeOfFunctionTwo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_baseline_drag_indicator_24"
                android:ems="10"
                android:gravity="start"
                android:hint=" کد کلید دوم"
                android:inputType="number"
                android:textColor="#000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtNameOfFunctionThree"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_baseline_drag_indicator_24"
                android:ems="10"
                android:gravity="start"
                android:hint=" کد کلید سوم"
                android:textColor="#000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtCodeOfFunctionThree"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_baseline_drag_indicator_24"
                android:ems="10"
                android:gravity="start"
                android:hint=" کد کلید سوم"
                android:inputType="number"
                android:textColor="#000"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/llSaveInGetNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/bg_button"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_baseline_check_circle_outline_24" />

                <TextView
                    android:id="@+id/txtSaveInGetNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ثبت"
                    android:textColor="#fff"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
</LinearLayout>