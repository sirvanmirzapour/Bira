<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edtNameOfDevice"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/ic_baseline_menu_24"
                        android:ems="10"
                        android:gravity="start"
                        android:hint="نام کارکرد"
                        android:inputType="text"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edtNumberOfDevice"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/ic_baseline_local_phone_24"
                        android:ems="10"
                        android:gravity="end"
                        android:hint="شماره موبایل"
                        android:inputType="phone"
                        android:textColor="#000"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_grey">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edtNameOfFunctionOne"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/ic_baseline_drag_indicator_24"
                        android:ems="10"
                        android:gravity="start"
                        android:hint=" عنوان کلید یک"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/llCodeOfFunctionOne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10px"
                        android:background="@drawable/bg_button"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtCodeOfFunctionOne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="انتخاب کارکرد" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llColorOfFunctionOne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10px"
                        android:background="@drawable/bg_button"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtColorOfFunctionOne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="انتخاب کارکرد" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_grey">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edtNameOfFunctionTwo"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/ic_baseline_drag_indicator_24"
                        android:ems="10"
                        android:gravity="start"
                        android:hint=" عنوان کلید یک"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/llCodeOfFunctionTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10px"
                        android:background="@drawable/bg_button"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtCodeOfFunctionTwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="انتخاب کارکرد" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llColorOfFunctionTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10px"
                        android:background="@drawable/bg_button"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtColorOfFunctionTwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="انتخاب رنگ" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_grey">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edtNameOfFunctionThree"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/ic_baseline_drag_indicator_24"
                        android:ems="10"
                        android:gravity="start"
                        android:hint=" عنوان کلید یک"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/llCodeOfFunctionThree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10px"
                        android:background="@drawable/bg_button"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtCodeOfFunctionThree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="انتخاب کارکرد" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llColorOfFunctionThree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10px"
                        android:background="@drawable/bg_button"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtColorOfFunctionThree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="انتخاب کارکرد" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/llSaveInGetNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/bg_button"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_baseline_check_circle_outline_24" />

                <TextView
                    android:id="@+id/txtSaveInGetNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ثبت"
                    android:textColor="#fff"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/llSelectColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/alert_dialog_bg"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <View
            android:id="@+id/viewColor"
            android:layout_width="match_parent"
            android:layout_height="200px" />

        <ImageView
            android:id="@+id/imgColorPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/colorpicker" />

        <LinearLayout
            android:id="@+id/llSaveColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/bg_button"
            android:orientation="horizontal">



            <TextView
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:id="@+id/txtSaveColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="انتخاب"
                android:textColor="#fff"
                android:textSize="14sp" />



        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
